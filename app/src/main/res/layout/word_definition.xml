<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--word definition start-->
        <TextView
            android:id="@+id/tv_word_label"
            tools:text="@string/word_label"
            android:text="@string/word_label"
            app:layout_constraintTop_toBottomOf="@id/et_notes"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_word"
            tools:text="@string/word_hint"
            android:text="@string/word_hint"
            app:layout_constraintLeft_toLeftOf="@id/tv_word_label"
            app:layout_constraintRight_toRightOf="@id/tv_word_label"
            app:layout_constraintTop_toBottomOf="@id/tv_word_label"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_definition_label"
            tools:text="@string/definition_label"
            android:text="@string/definition_label"
            app:layout_constraintTop_toBottomOf="@id/tv_word"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ViewSwitcher
            android:id="@+id/vs_definition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:measureAllChildren="false"
            app:layout_constraintLeft_toLeftOf="@id/tv_definition_label"
            app:layout_constraintRight_toRightOf="@id/tv_definition_label"
            app:layout_constraintTop_toBottomOf="@id/tv_definition_label"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp" >
            <TextView
                android:id="@+id/tv_definition"
                android:hint="@string/definition_hint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"/>
            <EditText
                android:id="@+id/et_definition"
                android:hint="@string/definition_hint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </ViewSwitcher>
        <!--word definition end-->
    </android.support.constraint.ConstraintLayout>
</layout>